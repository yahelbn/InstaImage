<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OnePictureInfo"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:weightSum="100"
    android:id="@+id/linearLayoutActivity"
    android:background="@drawable/mello"
    >



    <ImageView
        android:id="@+id/imageUploaded"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="14"
        >

    </ImageView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="2"
    android:layout_weight="22">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textAlignment="center"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:text="Name"
        android:textSize="12dp"
        android:background="@drawable/textview_border"
        android:id="@+id/nameOfPic">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textAlignment="center"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:text="Location"
        android:textSize="12dp"
        android:background="@drawable/textview_border"
        android:id="@+id/LocationOfPic">

    </TextView>

</LinearLayout>





    <TextView
        android:paddingTop="5dp"
        android:id="@+id/infoTextOfImage"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Info:"
        android:textSize="17dp"
        android:background="@drawable/textview_border"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="21.5">

    </TextView>

    <ListView
        android:id="@+id/listCommentsOfImage"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="19.5">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="23"
        android:orientation="horizontal"
        android:weightSum="9"

        >

        <Button
            android:id="@+id/ButtonComment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Add Comment"
            android:textAllCaps="false"
            android:layout_weight="6"
            android:textColor="#072540"

            android:background="@drawable/button_create"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            >
        </Button>

        <EditText
            android:id="@+id/EditTextComment"
            android:textAlignment="center"
            android:hint="Write here..."
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </EditText>



    </LinearLayout>


</LinearLayout>