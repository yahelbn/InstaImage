<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.uploadTheTakenPicture"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_gravity="center"
    android:background="@drawable/mello"

    >


        <ImageView
            android:id="@+id/ImageCurrentPic"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="14"
            >

        </ImageView>



        <EditText
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="14dp"
            android:layout_weight="28"
            android:paddingTop="20dp"
            android:paddingBottom="8dp"
            android:hint="Enter the name of picture.."
            android:textSize="20dp"
            android:background="@drawable/textview_border"
            android:id="@+id/editTextNameOfCurrentPic">

        </EditText>


        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="45dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="14dp"
            android:id="@+id/editTextInfoOfCurrentPic"
            android:paddingRight="5dp"
            android:paddingBottom="8dp"
            android:hint="Enter some info about the pic.."
            android:textSize="17dp"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="28">

        </EditText>

        <Button
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/uploadCurrentImageButton"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="31"
            android:text="Upload Image"
            android:textColor="#072540"

            android:background="@drawable/button_create"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5">

        </Button>







</LinearLayout>